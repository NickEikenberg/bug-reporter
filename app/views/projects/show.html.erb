<p id="notice"><%= notice %></p>

<h1>
  <strong>Project:</strong>
  <%= @project.name %>
</h1>

<% if current_user.id == @project.project_owner || @user_member.project_id == @project.id %>

<%= @user_member.inspect %>

<%= link_to 'Report New Bug', new_bug_path %>
<%= link_to 'Add Project Member', new_member_path %>


<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Branch</th>
      <th>Severity</th>
      <th>Created by</th>
      <th>Status</th>
      <th>Assigned to</th>
    </tr>
  </thead>

  <tbody>
    <% @bugs.each do |bug| %>
      <tr>
        <td><%= bug.id %></td>
        <td><%= link_to bug.title, bug%></td>
        <td><%= bug.branch %></td>
        <td><%= bug.severity %></td>
        <td><%= bug.created_by %></td>
        <td><%= bug.status %></td>
        <td><%= bug.assigned_to %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_project_path(@project) %> |
<% else %>
  <h1>User does not have permission to view this project</h1>
<% end %>
<%= link_to 'Back', projects_path %>
